{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "rules": {
    "global-require": 0,
    "new-cap": 0,
    "react/forbid-prop-types": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "import/prefer-default-export": 0,
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/webpack.dev.config"
      }
    }
  },
  "globals": {
    "log": false,
    "__DEV__": true,
    "__LOG_LEVEL__": true,
    "__VERSION__": false,
    "Phaser": false,
    "__SITE_URL__": false,
    "__CANVAS_W__": true,
    "__CANVAS_H__": true,  
    "__BG_COLOR__": true,
    "__FG_COLOR__": true,
    "__API_ROOT__": true
  },
}


